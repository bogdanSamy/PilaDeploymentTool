<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.shape.SVGPath?>

<VBox fx:id="notificationContainer" styleClass="notification-container"
      prefWidth="350" prefHeight="120"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml">

    <!-- Header cu titlu și buton de închidere -->
    <HBox fx:id="headerBox" styleClass="notification-header" alignment="CENTER_LEFT" spacing="10">
        <padding>
            <Insets top="10" right="10" bottom="5" left="15"/>
        </padding>

        <Label fx:id="titleLabel" styleClass="notification-title" text="Notificare" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>

        <Button fx:id="closeBtn" styleClass="close-btn" mnemonicParsing="false">
            <graphic>
                <SVGPath content="M 0,0 L 10,10 M 10,0 L 0,10" styleClass="close-icon"/>
            </graphic>
        </Button>
    </HBox>

    <!-- Conținutul notificării (mesaj - vizibil doar pentru notificări simple și importante) -->
    <VBox styleClass="notification-content" VBox.vgrow="ALWAYS">
        <padding>
            <Insets top="0" right="15" bottom="10" left="15"/>
        </padding>

        <Label fx:id="messageLabel" styleClass="notification-message"
               text="Acesta este mesajul notificării" wrapText="true" maxWidth="Infinity"/>
    </VBox>

    <!-- Container pentru butonul de acțiune (vizibil doar pentru notificări cu acțiune) -->
    <VBox fx:id="actionButtonContainer" styleClass="action-button-container" alignment="CENTER" VBox.vgrow="ALWAYS">
        <padding>
            <Insets top="5" right="15" bottom="10" left="15"/>
        </padding>

        <Button fx:id="actionButton" styleClass="action-btn" text="Acțiune" mnemonicParsing="false" maxWidth="Infinity"/>
    </VBox>

</VBox>