<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Separator?>

<AnchorPane prefHeight="780.0" prefWidth="650.0" minWidth="500.0" minHeight="500.0"
            styleClass="base" stylesheets="@../css/project-management.css"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <!-- Decorative side panels -->
        <AnchorPane layoutX="442.0" layoutY="-8.0" prefHeight="80.0" prefWidth="240.0" rotate="41.6"
                    styleClass="side" AnchorPane.rightAnchor="-108.0" AnchorPane.topAnchor="-8.0" />
        <AnchorPane layoutX="-106.0" layoutY="540.0" prefHeight="80.0" prefWidth="240.0" rotate="41.6"
                    styleClass="side" AnchorPane.bottomAnchor="-50.0" AnchorPane.leftAnchor="-90.0" />

        <!-- Main content with ScrollPane -->
        <ScrollPane fx:id="mainScrollPane" fitToWidth="true" hbarPolicy="NEVER" styleClass="scroll-pane"
                    AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="30.0">
            <content>
                <VBox alignment="TOP_CENTER" spacing="15.0">
                    <padding>
                        <Insets top="0" bottom="10.0" left="30.0" right="30.0" />
                    </padding>
                    <children>
                        <!-- Title -->
                        <Label styleClass="title-label" text="Project Management" />

                        <!-- Projects Table -->
                        <VBox spacing="8.0" styleClass="table-container">
                            <children>
                                <Label styleClass="section-label" text="PROJECTS LIST" />
                                <TableView fx:id="projectsTable" prefHeight="140.0" styleClass="projects-table">
                                    <columns>
                                        <TableColumn fx:id="nameColumn" prefWidth="590.0" text="Project Name" />
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                </TableView>
                            </children>
                        </VBox>

                        <!-- Project Details Form -->
                        <VBox spacing="12.0" styleClass="form-container">
                            <children>
                                <Label styleClass="section-label" text="PROJECT DETAILS" />

                                <!-- Project Name -->
                                <VBox spacing="6.0">
                                    <children>
                                        <HBox spacing="4">
                                            <Label styleClass="field-label" text="Project Name" />
                                            <Label styleClass="required-indicator" text="*" />
                                        </HBox>
                                        <TextField fx:id="nameField" promptText="Enter project name"
                                                   styleClass="field-input" />
                                    </children>
                                </VBox>

                                <!-- ═══════════ LOCAL PATHS ═══════════ -->
                                <Separator styleClass="section-separator" />
                                <Label styleClass="subsection-label" text="Local Paths" />

                                <!-- Local JAR Path -->
                                <VBox spacing="6.0">
                                    <children>
                                        <HBox spacing="4">
                                            <Label styleClass="field-label" text="JAR files directory" />
                                            <Label styleClass="required-indicator" text="*" />
                                        </HBox>
                                        <HBox spacing="8.0" styleClass="input-row">
                                            <children>
                                                <TextField fx:id="localJarPathField" promptText="e.g., C:\workspace\project\dist"
                                                           styleClass="field-input" HBox.hgrow="ALWAYS" />
                                                <Button fx:id="browseLocalJarBtn" styleClass="browse-btn"
                                                        text="Browse" minWidth="85" prefWidth="85" />
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>

                                <!-- Local JSP Path -->
                                <VBox spacing="6.0">
                                    <children>
                                        <HBox spacing="4">
                                            <Label styleClass="field-label" text="JSP files directory" />
                                            <Label styleClass="required-indicator" text="*" />
                                        </HBox>
                                        <HBox spacing="8.0" styleClass="input-row">
                                            <children>
                                                <TextField fx:id="localJspPathField" promptText="e.g., C:\workspace\project\web_app\SM"
                                                           styleClass="field-input" HBox.hgrow="ALWAYS" />
                                                <Button fx:id="browseLocalJspBtn" styleClass="browse-btn"
                                                        text="Browse" minWidth="85" prefWidth="85" />
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>

                                <!-- ═══════════ REMOTE PATHS ═══════════ -->
                                <Separator styleClass="section-separator" />
                                <Label styleClass="subsection-label" text="Remote Paths" />

                                <!-- Remote JAR Path -->
                                <VBox spacing="6.0">
                                    <children>
                                        <HBox spacing="4">
                                            <Label styleClass="field-label" text="JAR files directory" />
                                            <Label styleClass="required-indicator" text="*" />
                                        </HBox>
                                        <TextField fx:id="remoteJarPathField" promptText="e.g., /nodel/project/jar"
                                                   styleClass="field-input" />
                                    </children>
                                </VBox>

                                <!-- Remote JSP Path -->
                                <VBox spacing="6.0">
                                    <children>
                                        <HBox spacing="4">
                                            <Label styleClass="field-label" text="JSP files directory" />
                                            <Label styleClass="required-indicator" text="*" />
                                        </HBox>
                                        <TextField fx:id="remoteJspPathField" promptText="e.g., /nodel/project/jsp/SM"
                                                   styleClass="field-input" />
                                    </children>
                                </VBox>

                                <!-- ═══════════ BUILD CONFIGURATION ═══════════ -->
                                <Separator styleClass="section-separator" />
                                <Label styleClass="subsection-label" text="Build Configuration" />

                                <!-- Build File Path -->
                                <VBox spacing="6.0">
                                    <children>
                                        <HBox spacing="4">
                                            <Label styleClass="field-label" text="Build file" />
                                            <Label styleClass="required-indicator" text="*" />
                                        </HBox>
                                        <HBox spacing="8.0" styleClass="input-row">
                                            <children>
                                                <TextField fx:id="buildFilePathField" promptText="e.g., C:\workspace\project\build.xml"
                                                           styleClass="field-input" HBox.hgrow="ALWAYS" />
                                                <Button fx:id="browseBuildFileBtn" styleClass="browse-btn"
                                                        text="Browse" minWidth="85" prefWidth="85" />
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>

                                <!-- Ant Target Selection - INLINE -->
                                <HBox spacing="12.0" alignment="CENTER_LEFT">
                                    <children>
                                        <HBox spacing="4" alignment="CENTER_LEFT">
                                            <Label styleClass="field-label" text="Target" />
                                            <Label styleClass="required-indicator" text="*" />
                                        </HBox>
                                        <ComboBox fx:id="antTargetComboBox" promptText="Select target"
                                                  styleClass="field-input-inline" prefWidth="200" />
                                    </children>
                                </HBox>

                                <!-- Libraries Section -->
                                <VBox spacing="6.0">
                                    <children>
                                        <!-- Header cu Add button inline când e gol -->
                                        <HBox fx:id="librariesHeader" spacing="8" alignment="CENTER_LEFT">
                                            <children>
                                                <Label styleClass="field-label" text="Libraries (-lib)" />
                                                <Label styleClass="field-hint" text="(optional)" />
                                                <Button fx:id="addLibraryInlineBtn" styleClass="add-lib-inline-btn" text="+ Add" />
                                            </children>
                                        </HBox>

                                        <!-- Container pentru libraries (ascuns când e gol) -->
                                        <VBox fx:id="librariesContainer" spacing="6.0" styleClass="libraries-container" managed="false" visible="false">
                                            <!-- Library rows added dynamically -->
                                        </VBox>

                                        <!-- Butonul Add din josul listei (vizibil doar când există libraries) -->
                                        <HBox fx:id="librariesFooter" spacing="8.0" managed="false" visible="false">
                                            <children>
                                                <Button fx:id="addLibraryBtn" styleClass="lib-action-btn" text="+ Add" />
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>

                                <!-- Ant Command (MAIN - editabil și salvat) -->
                                <!-- Ant Command (MAIN - editabil și salvat) -->
                                <VBox spacing="6.0">
                                    <children>
                                        <HBox spacing="8" alignment="CENTER_LEFT">
                                            <Label styleClass="field-label" text="Command Preview" />
                                            <Label styleClass="field-hint" text="(edit freely - this is what gets executed)" />
                                        </HBox>
                                        <TextArea fx:id="antCommandArea" wrapText="true" prefHeight="100.0"
                                                  styleClass="command-area"
                                                  promptText="ant -lib &quot;path/to/lib.jar&quot; -f &quot;build.xml&quot; target" />
                                        <HBox spacing="8.0" alignment="CENTER_LEFT">
                                            <children>
                                                <Button fx:id="regenerateCommandBtn" styleClass="lib-action-btn" text="↻ Regenerate" />
                                                <Button fx:id="testBuildBtn" styleClass="test-build-btn" text="▶ Test Build" />
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>

                                <!-- Build Results (hidden initially) -->
                                <VBox fx:id="buildResultsContainer" spacing="6.0" managed="false" visible="false">
                                    <children>
                                        <HBox spacing="8" alignment="CENTER_LEFT">
                                            <Label styleClass="field-label" text="Build Results" />
                                            <Label fx:id="buildStatusLabel" styleClass="build-status-success" text="✓ Success" />
                                            <Label styleClass="results-separator" text="•" />
                                            <Label styleClass="build-status-success" fx:id="jarCountLabel" text="0 JAR Generated" />
                                        </HBox>
                                        <VBox styleClass="build-results-box">
                                            <children>
                                                <TableView fx:id="jarResultsTable" prefHeight="120.0" styleClass="jar-results-table">
                                                    <columns>
                                                        <TableColumn fx:id="jarNameColumn" text="File Name" prefWidth="280" />
                                                        <TableColumn fx:id="jarSizeColumn" text="Size" prefWidth="80" />
                                                        <TableColumn fx:id="jarDateColumn" text="Modified" prefWidth="140" />
                                                    </columns>
                                                    <columnResizePolicy>
                                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                                    </columnResizePolicy>
                                                </TableView>
                                            </children>
                                        </VBox>
                                        <Button fx:id="hideBuildResultsBtn" styleClass="lib-action-btn" text="Hide Results" />
                                    </children>
                                </VBox>
                            </children>
                        </VBox>

                        <!-- Action Buttons -->
                        <HBox alignment="CENTER" spacing="10.0" styleClass="button-container">
                            <children>
                                <Button fx:id="addBtn" styleClass="action-btn, add-btn"
                                        text="Add" minWidth="90" prefWidth="90" />
                                <Button fx:id="updateBtn" styleClass="action-btn, update-btn"
                                        text="Update" minWidth="90" prefWidth="90" />
                                <Button fx:id="deleteBtn" styleClass="action-btn, delete-btn"
                                        text="Delete" minWidth="90" prefWidth="90" />
                                <Button fx:id="clearBtn" styleClass="action-btn, clear-btn"
                                        text="Clear" minWidth="90" prefWidth="90" />
                            </children>
                            <VBox.margin>
                                <Insets top="8.0" />
                            </VBox.margin>
                        </HBox>

                        <!-- Close Button -->
                        <HBox alignment="CENTER">
                            <children>
                                <Button fx:id="closeDialogBtn" styleClass="action-btn, close-dialog-btn"
                                        text="Close" minWidth="130" prefWidth="130" />
                            </children>
                            <VBox.margin>
                                <Insets top="8.0" />
                            </VBox.margin>
                        </HBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>

        <!-- Close button -->
        <Button fx:id="closeBtn" mnemonicParsing="false" styleClass="close-btn-project"
                AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <graphic>
                <SVGPath content="M3.726563 3.023438L3.023438 3.726563L7.292969 8L3.023438 12.269531L3.726563 12.980469L8 8.707031L12.269531 12.980469L12.980469 12.269531L8.707031 8L12.980469 3.726563L12.269531 3.023438L8 7.292969Z"
                         styleClass="btn-shape" />
            </graphic>
        </Button>
    </children>
</AnchorPane>