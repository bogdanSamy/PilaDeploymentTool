<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>

<AnchorPane prefHeight="650.0" prefWidth="650.0" minWidth="500.0" minHeight="500.0"
            styleClass="base" stylesheets="@../css/project-management.css"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <!-- Decorative side panels -->
        <AnchorPane layoutX="442.0" layoutY="-8.0" prefHeight="80.0" prefWidth="240.0" rotate="41.6"
                    styleClass="side" AnchorPane.rightAnchor="-108.0" AnchorPane.topAnchor="-8.0" />
        <AnchorPane layoutX="-106.0" layoutY="540.0" prefHeight="80.0" prefWidth="240.0" rotate="41.6"
                    styleClass="side" AnchorPane.bottomAnchor="-50.0" AnchorPane.leftAnchor="-90.0" />

        <!-- Main content with ScrollPane - STARTS BELOW TITLE BAR -->
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="scroll-pane"
                    AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="30.0">
            <content>
                <VBox alignment="TOP_CENTER" spacing="15.0">
                    <padding>
                        <Insets top="0" bottom="10.0" left="30.0" right="30.0" />
                    </padding>
                    <children>
                        <!-- Title -->
                        <Label styleClass="title-label" text="Project Management" />

                        <!-- Projects Table -->
                        <VBox spacing="8.0" styleClass="table-container">
                            <children>
                                <Label styleClass="section-label" text="PROJECTS LIST" />
                                <TableView fx:id="projectsTable" prefHeight="160.0" styleClass="projects-table">
                                    <columns>
                                        <TableColumn fx:id="nameColumn" prefWidth="590.0" text="Project Name" />
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                </TableView>
                            </children>
                        </VBox>

                        <!-- Project Details Form -->
                        <VBox spacing="12.0" styleClass="form-container">
                            <children>
                                <Label styleClass="section-label" text="PROJECT DETAILS" />

                                <!-- Project Name -->
                                <VBox spacing="6.0">
                                    <children>
                                        <HBox spacing="4">
                                            <Label styleClass="field-label" text="Project Name" />
                                            <Label styleClass="required-indicator" text="*" />
                                        </HBox>
                                        <TextField fx:id="nameField" promptText="Enter project name"
                                                   styleClass="field-input" />
                                    </children>
                                </VBox>

                                <!-- Local JAR Path -->
                                <VBox spacing="6.0">
                                    <children>
                                        <HBox spacing="4">
                                            <Label styleClass="field-label" text="Absolute path to JAR files" />
                                            <Label styleClass="required-indicator" text="*" />
                                        </HBox>
                                        <HBox spacing="8.0" styleClass="input-row">
                                            <children>
                                                <TextField fx:id="localJarPathField" promptText="e.g., C:\eclipse\workspace\projectName\dist"
                                                           styleClass="field-input" HBox.hgrow="ALWAYS" />
                                                <Button fx:id="browseLocalJarBtn" styleClass="browse-btn"
                                                        text="Browse" minWidth="85" prefWidth="85" />
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>

                                <!-- Local JSP Path -->
                                <VBox spacing="6.0">
                                    <children>
                                        <HBox spacing="4">
                                            <Label styleClass="field-label" text="Absolute path to JSP directories" />
                                            <Label styleClass="required-indicator" text="*" />
                                        </HBox>
                                        <HBox spacing="8.0" styleClass="input-row">
                                            <children>
                                                <TextField fx:id="localJspPathField" promptText="e.g., C:\eclipse\workspace\projectName\web_app_intranet\SM"
                                                           styleClass="field-input" HBox.hgrow="ALWAYS" />
                                                <Button fx:id="browseLocalJspBtn" styleClass="browse-btn"
                                                        text="Browse" minWidth="85" prefWidth="85" />
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>

                                <!-- Remote JAR Path -->
                                <VBox spacing="6.0">
                                    <children>
                                        <HBox spacing="4">
                                            <Label styleClass="field-label" text="Absolute path to remote JAR files" />
                                            <Label styleClass="required-indicator" text="*" />
                                        </HBox>
                                        <TextField fx:id="remoteJarPathField" promptText="e.g., /nodel/projectName/jar"
                                                   styleClass="field-input" />
                                    </children>
                                </VBox>

                                <!-- Remote JSP Path -->
                                <VBox spacing="6.0">
                                    <children>
                                        <HBox spacing="4">
                                            <Label styleClass="field-label" text="Absolute path to remote JSP directories" />
                                            <Label styleClass="required-indicator" text="*" />
                                        </HBox>
                                        <TextField fx:id="remoteJspPathField" promptText="e.g., /nodel/CaeEsercente/jsp/SM"
                                                   styleClass="field-input" />
                                    </children>
                                </VBox>

                                <!-- Build File Path -->
                                <VBox spacing="6.0">
                                    <children>
                                        <HBox spacing="4">
                                            <Label styleClass="field-label" text="Absolute path to BUILD file" />
                                            <Label styleClass="required-indicator" text="*" />
                                        </HBox>
                                        <HBox spacing="8.0" styleClass="input-row">
                                            <children>
                                                <TextField fx:id="buildFilePathField" promptText="e.g., C:\eclipse\workspace\projectName\build_ejb.xml"
                                                           styleClass="field-input" HBox.hgrow="ALWAYS" />
                                                <Button fx:id="browseBuildFileBtn" styleClass="browse-btn"
                                                        text="Browse" minWidth="85" prefWidth="85" />
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                            </children>
                        </VBox>

                        <!-- Action Buttons -->
                        <HBox alignment="CENTER" spacing="10.0" styleClass="button-container">
                            <children>
                                <Button fx:id="addBtn" styleClass="action-btn, add-btn"
                                        text="Add" minWidth="90" prefWidth="90" />
                                <Button fx:id="updateBtn" styleClass="action-btn, update-btn"
                                        text="Update" minWidth="90" prefWidth="90" />
                                <Button fx:id="deleteBtn" styleClass="action-btn, delete-btn"
                                        text="Delete" minWidth="90" prefWidth="90" />
                                <Button fx:id="clearBtn" styleClass="action-btn, clear-btn"
                                        text="Clear" minWidth="90" prefWidth="90" />
                            </children>
                            <VBox.margin>
                                <Insets top="8.0" />
                            </VBox.margin>
                        </HBox>

                        <!-- Close Button -->
                        <HBox alignment="CENTER">
                            <children>
                                <Button fx:id="closeDialogBtn" styleClass="action-btn, close-dialog-btn"
                                        text="Close" minWidth="130" prefWidth="130" />
                            </children>
                            <VBox.margin>
                                <Insets top="8.0" />
                            </VBox.margin>
                        </HBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>

        <!-- Close button - MUST BE AFTER ScrollPane to be on top -->
        <Button fx:id="closeBtn" mnemonicParsing="false" styleClass="close-btn-project"
                AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <graphic>
                <SVGPath content="M3.726563 3.023438L3.023438 3.726563L7.292969 8L3.023438 12.269531L3.726563 12.980469L8 8.707031L12.269531 12.980469L12.980469 12.269531L8.707031 8L12.980469 3.726563L12.269531 3.023438L8 7.292969Z"
                         styleClass="btn-shape" />
            </graphic>
        </Button>
    </children>
</AnchorPane>