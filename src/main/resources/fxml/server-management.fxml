<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>

<AnchorPane prefHeight="650.0" prefWidth="650.0" minWidth="500.0" minHeight="500.0"
            styleClass="base" stylesheets="@../css/server-management.css"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <!-- Decorative side panels -->
        <AnchorPane layoutX="442.0" layoutY="-8.0" prefHeight="80.0" prefWidth="240.0" rotate="41.6"
                    styleClass="side" AnchorPane.rightAnchor="-108.0" AnchorPane.topAnchor="-8.0" />
        <AnchorPane layoutX="-106.0" layoutY="540.0" prefHeight="80.0" prefWidth="240.0" rotate="41.6"
                    styleClass="side" AnchorPane.bottomAnchor="-50.0" AnchorPane.leftAnchor="-90.0" />

        <!-- Main content with ScrollPane - STARTS BELOW TITLE BAR -->
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="scroll-pane"
                    AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="30.0">
            <content>
                <VBox alignment="TOP_CENTER" spacing="15.0">
                    <padding>
                        <Insets top="0" bottom="20.0" left="30.0" right="30.0" />
                    </padding>
                    <children>
                        <!-- Title -->
                        <Label styleClass="title-label" text="Server Management" />

                        <!-- Servers Table -->
                        <VBox spacing="8.0" styleClass="table-container">
                            <children>
                                <Label styleClass="section-label" text="SERVERS LIST" />
                                <TableView fx:id="serversTable" prefHeight="160.0" styleClass="servers-table">
                                    <columns>
                                        <TableColumn fx:id="nameColumn" prefWidth="250.0"
                                                     minWidth="150.0" maxWidth="300.0" text="Server Name" />
                                        <TableColumn fx:id="hostColumn" prefWidth="340.0"
                                                     minWidth="200.0" text="Host / IP Address" />
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                </TableView>
                            </children>
                        </VBox>

                        <!-- Server Details Form -->
                        <VBox spacing="12.0" styleClass="form-container">
                            <children>
                                <Label styleClass="section-label" text="SERVER DETAILS" />

                                <!-- Server Name -->
                                <VBox spacing="6.0">
                                    <children>
                                        <HBox spacing="4">
                                            <Label styleClass="field-label" text="Server Name" />
                                            <Label styleClass="required-indicator" text="*" />
                                        </HBox>
                                        <TextField fx:id="nameField" promptText="e.g. 61"
                                                   styleClass="field-input" />
                                    </children>
                                </VBox>

                                <!-- Host / IP -->
                                <VBox spacing="6.0">
                                    <children>
                                        <HBox spacing="4">
                                            <Label styleClass="field-label" text="IP Address" />
                                            <Label styleClass="required-indicator" text="*" />
                                        </HBox>
                                        <TextField fx:id="hostField" promptText="e.g. 172.17.29.209"
                                                   styleClass="field-input" />
                                    </children>
                                </VBox>

                                <!-- Port -->
                                <VBox spacing="6.0">
                                    <children>
                                        <HBox spacing="4">
                                            <Label styleClass="field-label" text="SSH Port" />
                                            <Label styleClass="required-indicator" text="*" />
                                        </HBox>
                                        <TextField fx:id="portField" text="22" promptText="Default: 22"
                                                   styleClass="field-input" />
                                    </children>
                                </VBox>

                                <!-- Username -->
                                <VBox spacing="6.0">
                                    <children>
                                        <HBox spacing="4">
                                            <Label styleClass="field-label" text="SSH Username" />
                                            <Label styleClass="required-indicator" text="*" />
                                        </HBox>
                                        <TextField fx:id="usernameField" promptText="Default: dev"
                                                   styleClass="field-input" />
                                    </children>
                                </VBox>

                                <!-- Password -->
                                <VBox spacing="6.0">
                                    <children>
                                        <HBox spacing="4">
                                            <Label styleClass="field-label" text="SSH Password" />
                                            <Label styleClass="required-indicator" text="*" />
                                        </HBox>
                                        <PasswordField fx:id="passwordField" promptText="Default: dev"
                                                       styleClass="field-input" />
                                    </children>
                                </VBox>

                                <!-- Restart Manager Script Path -->
                                <VBox spacing="6.0">
                                    <children>
                                        <HBox spacing="4">
                                            <Label styleClass="field-label" text="Restart Manager Script Path" />
                                            <Label styleClass="required-indicator" text="*" />
                                        </HBox>
                                        <TextField fx:id="restartScriptField"
                                                   text="/nodel/RestartManager/restart_manager.sh"
                                                   promptText="Path to restart_manager.sh on server"
                                                   styleClass="field-input" />
                                    </children>
                                </VBox>
                            </children>
                        </VBox>

                        <!-- Action Buttons -->
                        <HBox alignment="CENTER" spacing="10.0" styleClass="button-container">
                            <children>
                                <Button fx:id="addBtn" styleClass="action-btn, add-btn"
                                        text="Add" minWidth="90" prefWidth="90" />
                                <Button fx:id="updateBtn" styleClass="action-btn, update-btn"
                                        text="Update" minWidth="90" prefWidth="90" />
                                <Button fx:id="deleteBtn" styleClass="action-btn, delete-btn"
                                        text="Delete" minWidth="90" prefWidth="90" />
                                <Button fx:id="clearBtn" styleClass="action-btn, clear-btn"
                                        text="Clear" minWidth="90" prefWidth="90" />
                            </children>
                            <VBox.margin>
                                <Insets top="8.0" />
                            </VBox.margin>
                        </HBox>

                        <!-- Close Button -->
                        <HBox alignment="CENTER">
                            <children>
                                <Button fx:id="closeDialogBtn" styleClass="action-btn, close-dialog-btn"
                                        text="Close" minWidth="130" prefWidth="130" />
                            </children>
                            <VBox.margin>
                                <Insets top="8.0" />
                            </VBox.margin>
                        </HBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>

        <!-- Close button - MUST BE AFTER ScrollPane to be on top -->
        <Button fx:id="closeBtn" mnemonicParsing="false" styleClass="close-btn-server"
                AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <graphic>
                <SVGPath content="M3.726563 3.023438L3.023438 3.726563L7.292969 8L3.023438 12.269531L3.726563 12.980469L8 8.707031L12.269531 12.980469L12.980469 12.269531L8.707031 8L12.980469 3.726563L12.269531 3.023438L8 7.292969Z"
                         styleClass="btn-shape" />
            </graphic>
        </Button>
    </children>
</AnchorPane>