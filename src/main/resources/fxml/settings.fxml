<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>

<AnchorPane prefHeight="600.0" prefWidth="500.0" minWidth="380.0" minHeight="450.0"
            styleClass="base" stylesheets="@../css/settings.css"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <!-- Decorative side panels -->
        <AnchorPane layoutX="342.0" layoutY="-8.0" prefHeight="80.0" prefWidth="240.0" rotate="41.6"
                    styleClass="side" AnchorPane.rightAnchor="-108.0" AnchorPane.topAnchor="-8.0" />
        <AnchorPane layoutX="-106.0" layoutY="440.0" prefHeight="80.0" prefWidth="240.0" rotate="41.6"
                    styleClass="side" AnchorPane.bottomAnchor="-50.0" AnchorPane.leftAnchor="-90.0" />

        <!-- Close button -->
        <Button fx:id="closeBtn" mnemonicParsing="false" styleClass="close-btn-settings"
                AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <graphic>
                <SVGPath content="M3.726563 3.023438L3.023438 3.726563L7.292969 8L3.023438 12.269531L3.726563 12.980469L8 8.707031L12.269531 12.980469L12.980469 12.269531L8.707031 8L12.980469 3.726563L12.269531 3.023438L8 7.292969Z"
                         styleClass="btn-shape" />
            </graphic>
        </Button>

        <!-- Main content with ScrollPane -->
        <ScrollPane fitToWidth="true" styleClass="settings-scroll-pane"
                    AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <VBox alignment="TOP_CENTER" spacing="12.0">
                <padding>
                    <Insets top="0" bottom="10.0" left="30.0" right="30.0" />
                </padding>
                <children>
                    <!-- Title -->
                    <Label styleClass="title-label" text="Settings" />

                    <!-- Theme Selection -->
                    <VBox spacing="6.0" styleClass="field-container">
                        <children>
                            <Label styleClass="field-label" text="APPLICATION THEME" />
                            <ComboBox fx:id="themeComboBox" maxWidth="Infinity"
                                      promptText="Select a theme" styleClass="theme-combo"
                                      prefHeight="45" />
                        </children>
                    </VBox>

                    <!-- Ant Path -->
                    <VBox spacing="0" styleClass="field-container">
                        <children>
                            <Label styleClass="field-label" text="ABSOLUTE PATH TO ANT FILE" />
                            <HBox spacing="0" styleClass="input-row">
                                <children>
                                    <TextField fx:id="antPathField" promptText="e.g., C:\apache-ant-1.10.15\bin\ant.bat"
                                               styleClass="field-input" HBox.hgrow="ALWAYS" />
                                    <Button fx:id="browseAntBtn" styleClass="browse-btn"
                                            text="Browse" minWidth="85" prefWidth="85" />
                                </children>
                            </HBox>
                        </children>
                    </VBox>

                    <!-- Browser URL Suffix -->
                    <VBox spacing="0" styleClass="field-container">
                        <children>
                            <Label styleClass="field-label" text="BROWSER URL SUFFIX" />
                            <TextField fx:id="urlSuffixField" promptText="main?application.HomePageIntranet.new"
                                       styleClass="field-input" />
                        </children>
                    </VBox>

                    <!-- Local Download Directory -->
                    <VBox spacing="0" styleClass="field-container">
                        <children>
                            <Label styleClass="field-label" text="LOCAL DOWNLOAD DIRECTORY" />
                            <HBox spacing="0" styleClass="input-row">
                                <children>
                                    <TextField fx:id="downloadFolderField" promptText="Select download folder"
                                               styleClass="field-input" HBox.hgrow="ALWAYS" />
                                    <Button fx:id="browseDownloadBtn" styleClass="browse-btn"
                                            text="Browse" minWidth="85" prefWidth="85" />
                                </children>
                            </HBox>
                        </children>
                    </VBox>

                    <!-- Remote Log Path -->
                    <VBox spacing="0" styleClass="field-container">
                        <children>
                            <Label styleClass="field-label" text="REMOTE LOG PATH" />
                            <TextField fx:id="remoteLogPathField" promptText="/mount/bea/log/h2o/12d/dINdomain/serverdIN1.out"
                                       styleClass="field-input" />
                        </children>
                    </VBox>

                    <!-- Username -->
                    <VBox spacing="0" styleClass="field-container">
                        <children>
                            <Label styleClass="field-label" text="USERNAME" />
                            <TextField fx:id="usernameField" promptText="Enter username"
                                       styleClass="field-input" />
                        </children>
                    </VBox>

                    <!-- Buttons -->
                    <HBox alignment="CENTER" spacing="10.0" styleClass="button-container">
                        <children>
                            <Button fx:id="saveBtn" styleClass="action-btn, save-btn"
                                    text="Save" minWidth="105" prefWidth="105" />
                            <Button fx:id="cancelBtn" styleClass="action-btn, cancel-btn"
                                    text="Cancel" minWidth="105" prefWidth="105" />
                        </children>
                        <VBox.margin>
                            <Insets top="10.0" />
                        </VBox.margin>
                    </HBox>
                </children>
            </VBox>
        </ScrollPane>
    </children>
</AnchorPane>